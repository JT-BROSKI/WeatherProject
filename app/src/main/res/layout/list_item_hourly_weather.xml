<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="75dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_Date_Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="TDY"
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_Date_Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Date_Day"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="1/11"
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_Hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Date_Num"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="10 PM"
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_Icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txt_Hour"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txt_Hourly_Temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_Icon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="40&#xb0;"
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wind_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Hourly_Temp"
            android:layout_centerHorizontal="true"
            android:text="10"
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wind_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wind_value"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="-3dp"
            android:text="mph"
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wind_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wind_scale"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="(N)"
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/precipitation_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wind_direction"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/rain_drop"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_rain_drop" />

            <TextView
                android:id="@+id/precip_chance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/rain_drop"
                android:text="10%"
                android:textColor="@color/rain_blue"
                android:textSize="16sp" />
        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>