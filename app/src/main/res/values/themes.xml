<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UI.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="appbarColor">@color/lighter_black</item>
        <item name="appbarTextColor">@color/light_gray1</item>
        <item name="bgColor">@color/light_gray3</item>
        <item name="surfaceColor">@color/dark_gray</item>
        <item name="primaryTextColor">@color/light_gray1</item>
        <item name="secondaryTextColor">@color/light_gray2</item>
        <item name="alertSecondaryTextColor">@color/light_gray3</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.UI.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="appbarColor">@color/purple_500</item>
        <item name="appbarTextColor">@color/white</item>
        <item name="bgColor">@color/light_gray1</item>
        <item name="surfaceColor">@color/light_gray0</item>
        <item name="primaryTextColor">@color/black</item>
        <item name="secondaryTextColor">@color/light_gray3</item>
        <item name="alertSecondaryTextColor">@color/light_gray3</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="LaunchTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>